[Unit]
Description = isucon6 bench worker

[Service]
LimitNOFILE=1006500
LimitNPROC=1006500

WorkingDirectory=/home/isucon/

ExecStart = /home/isucon/isucon6f/worker -portal {{ portal_private_ip }}:8080

Restart   = always
Type      = simple
User      = isucon
Group     = isucon

[Install]
WantedBy = multi-user.target
